	public void verifyEmail(String email, String code) {
		String storedCode = userMapper.getVerificationCode(email);
		
		if(storedCode == null) {
			throw new ResponseStatusException(HttpStatus.BAD_REQUEST, "ì¸ì¦ë²ˆí˜¸ê°€ ì¡´ì¬í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.");
		}
		
